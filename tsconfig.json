{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "out/js",
        "baseUrl": "src/ts",
        "allowJs": false,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./src/ts/**/*"
    ]
}