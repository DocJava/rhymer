{
  "name": "rhymer",
  "version": "0.0.1",
  "license": "GPL-3.0-or-later",
  "description": "An app that gets out of your way and let's you write the lyrics or poems that you want to!",
  "author": {
    "name": "Wardell Bagby",
    "email": "dev@wardellbagby.com"
  },
  "repository": {
    "type": "git",
    "url": "git://https://github.com/wardellbagby/rhymer.git"
  },
  "homepage": "https://github.com/wardellbagby/rhymer",
  "main": "out/js/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run build && electron .",
    "pack": "build --dir",
    "dist": "build",
    "dist-all": "build --win --mac --linux"
  },
  "build": {
    "appId": "com.wardellbagby.rhymer",
    "productName": "Rhymer",
    "artifactName": "Rhymer.${ext}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {},
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "^4.0.3",
    "electron-builder": "^20.38.5",
    "tslint-microsoft-contrib": "^6.0.0",
    "typestrict": "^1.0.2"
  },
  "dependencies": {
    "brace": "^0.11.1",
    "datamuse": "^1.0.5",
    "rxjs": "^6.4.0",
    "syllable": "^3.4.0",
    "thenby": "^1.3.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  }
}